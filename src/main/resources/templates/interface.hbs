{{#partial "interface"}}

<h1>Interface List</h1>
{{#if devices}}
<form action="/interface" method="post">
        <label for="output">Select your output device:</label>
        <select id="output" name="output">
            {{#each devices}}
            <option value="{{@index}}">{{this}}</option>
            {{/each}}
        </select>
    <button type="submit" class="btn btn-danger">Select Device</button>
</form>
<h2>Your current output: {{chosen.info}}</h2>
{{else}}
    <p>There are no connected devices</p>
{{/if}}


<button class="bottom"><a href="/steps/edit">Edit Step Length</a></button>


{{/partial}}

{{> layout.hbs}}